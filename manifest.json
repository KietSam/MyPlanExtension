{
  "manifest_version": 2,

  "name": "MyPlan++",
  "description": "Adds additional functionality to MyPlan",
  "version": "1.0",

  "content_scripts": [
      {
          "matches": ["https://*.myplan.uw.edu/*"],
          "js": ["myplanplusplus.js"],
          "css": ["myplanplusplus.css"]
      }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
